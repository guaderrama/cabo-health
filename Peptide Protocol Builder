// --- CALCULATION LOGIC (calc.ts) ---
const MG_TO_MCG = 1000;
const toMcg = (vMg) => vMg * MG_TO_MCG;
const toMg = (vMcg) => vMcg / MG_TO_MCG;

const computeUnits = (vialMg, bacMl, doseValue, doseUnit) => {
    if (!vialMg || vialMg.length === 0 || !bacMl || !doseValue || doseValue.length === 0 || bacMl <= 0) {
        return { units: Array(vialMg?.length || 1).fill(0), volumeMl: Array(vialMg?.length || 1).fill(0) };
    }

    const doseMcg = doseValue.map(d => doseUnit === 'mg' ? toMcg(d) : d);
    
    const results = vialMg.map((mg, i) => {
        if (mg <= 0) return { units: 0, volumeMl: 0 };
        const mcgPerMl = (mg * MG_TO_MCG) / bacMl;
        if (mcgPerMl === 0) return { units: 0, volumeMl: 0 };
        const vol = (doseMcg[i] || 0) / mcgPerMl;
        const units = +(vol * 100).toFixed(1);
        return { units, volumeMl: +vol.toFixed(3) };
    });

    return results.reduce(
        (acc, v) => ({
            units: [...acc.units, v.units],
            volumeMl: [...acc.volumeMl, v.volumeMl],
        }), { units: [], volumeMl: [] }
    );
};


// --- Main App Component ---
export default function App() {
    const [language, setLanguage] = useState('es');
    const [clientInfo, setClientInfo] = useState({
        name: '',
        email: '',
        weight: '',
        date: new Date().toISOString().split('T')[0]
    });
    const [protocolItems, setProtocolItems] = useState([]);
    const [isAdding, setIsAdding] = useState(false);
    const [newItem, setNewItem] = useState(null);
    const [isExporting, setIsExporting] = useState(false);
    const [scriptsLoaded, setScriptsLoaded] = useState(false);
    
    const pdfPrintRef = useRef();

    useEffect(() => {
        const loadScript = (src) => {
            return new Promise((resolve, reject) => {
                if (document.querySelector(`script[src="${src}"]`)) {
                    return resolve();
                }
                const script = document.createElement('script');
                script.src = src;
                script.onload = () => resolve();
                script.onerror = () => reject(new Error(`Script load error for ${src}`));
                document.head.appendChild(script);
            });
        };

        if (typeof html2canvas !== 'undefined' && typeof window.jspdf !== 'undefined') {
             setScriptsLoaded(true);
             return;
        }

        Promise.all([
            loadScript("https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"),
            loadScript("https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js")
        ]).then(() => {
            setScriptsLoaded(true);
            console.log("PDF generation libraries loaded successfully.");
        }).catch(error => {
            console.error("Failed to load PDF generation libraries:", error);
        });

    }, []);

    const uniquePurposes = useMemo(() => [...new Set(PEPTIDE_DATASET.map(p => p.purpose).filter(Boolean))], []);
    const uniqueTimings = useMemo(() => [...new Set(PEPTIDE_DATASET.map(p => p.timing).filter(Boolean))], []);
    const uniqueFrequencies = useMemo(() => [...new Set(PEPTIDE_DATASET.map(p => p.frequency).filter(Boolean))], []);
    const uniqueDurations = useMemo(() => [...new Set(PEPTIDE_DATASET.map(p => p.duration).filter(Boolean))], []);

    // i18n Hook
    const t = useCallback((key, params = {}) => {
        let text = resources[language].translation[key] || key;
        Object.keys(params).forEach(pKey => {
            text = text.replace(`{{${pKey}}}`, params[pKey]);
        });
        return text;
    }, [language]);
    
    const tPurpose = useCallback((purpose) => {
        return resources[language].translation[purpose] || purpose;
    }, [language]);


    const handleClientInfoChange = (e) => {
        const { name, value } = e.target;
        setClientInfo(prev => ({ ...prev, [name]: value }));
    };

    const handleStartAdding = (peptideId = null) => {
        if (protocolItems.length >= 5) {
            console.warn("Cannot add more than 5 items.");
            return;
        }

        let item;
        if (peptideId) {
            const peptide = PEPTIDE_DATASET.find(p => p.id === peptideId);
            item = {
                type: 'peptide',
                isManual: false,
                productId: peptide.id,
                ...peptide,
                amountInVialMg: [...peptide.amountInVialMg],
                chosenDose: [...peptide.recommendedDose],
                chosenDoseUnit: peptide.recommendedDoseUnit,
                chosenBacWaterMl: peptide.bacWaterMl,
            };
        } else { // Manual item
            item = {
                type: 'peptide',
                isManual: true,
                productId: null,
                name: '',
                purpose: '',
                amountInVialMg: [0],
                chosenBacWaterMl: 1,
                chosenDose: [0],
                chosenDoseUnit: 'mcg',
                timing: '',
                frequency: '',
                duration: '',
                notes: '',
            };
        }
        setNewItem(item);
        setIsAdding(true);
    };
    
    const handleUpdateNewItem = (field, value, index = null) => {
        setNewItem(prevItem => {
            const newItem = {
                ...prevItem,
                amountInVialMg: [...prevItem.amountInVialMg],
                chosenDose: [...prevItem.chosenDose],
            };
    
            if (field === 'chosenDoseUnit') {
                const oldUnit = prevItem.chosenDoseUnit;
                const newUnit = value;
    
                if (oldUnit !== newUnit) {
                    newItem.chosenDoseUnit = newUnit;
                    newItem.chosenDose = newItem.chosenDose.map(dose => {
                        const numDose = parseFloat(dose) || 0;
                        return oldUnit === 'mcg' ? toMg(numDose) : toMcg(numDose);
                    });
                }
            } else if (index !== null) {
                newItem[field][index] = value;
                if (field === 'amountInVialMg' && newItem.chosenDose.length < newItem.amountInVialMg.length) {
                    newItem.chosenDose.push(0);
                }
            } else {
                newItem[field] = value;
            }
    
            return newItem;
        });
    };
    
    const handleCancelAdding = () => {
        setIsAdding(false);
        setNewItem(null);
    };

    const handleCommitNewItem = () => {
        if (newItem) {
            setProtocolItems(prev => [...prev, { ...newItem, uniqueId: Date.now() }]);
            handleCancelAdding();
        }
    };

    const handleAddNote = () => {
        if (protocolItems.length >= 5) return;
        const newNote = {
            type: 'note',
            uniqueId: Date.now(),
            content: '',
        };
        setProtocolItems(prev => [...prev, newNote]);
    };

    const updateProtocolItemInList = (uniqueId, newContent) => {
        setProtocolItems(prevItems =>
            prevItems.map(item =>
                item.uniqueId === uniqueId ? { ...item, content: newContent } : item
            )
        );
    };

    const removeProtocolItem = (uniqueId) => {
        setProtocolItems(prev => prev.filter(item => item.uniqueId !== uniqueId));
    };

    const handleExportPdf = async () => {
        if (!scriptsLoaded || typeof html2canvas === 'undefined' || typeof window.jspdf === 'undefined') {
            console.error("PDF generation libraries are not available or still loading.");
            return;
        }

        setIsExporting(true);
        const { jsPDF } = window.jspdf;
        const element = pdfPrintRef.current;
        const logoElement = element?.querySelector('#pdf-logo');

        if (!element) {
            setIsExporting(false);
            return;
        };

        if (logoElement) {
            logoElement.style.visibility = 'hidden';
        }

        try {
            const canvas = await html2canvas(element, {
                scale: 2,
                useCORS: true,
                backgroundColor: '#ffffff'
            });

            const imgData = canvas.toDataURL('image/png');
            
            const pdf = new jsPDF('l', 'mm', 'a4');
            const pdfWidth = pdf.internal.pageSize.getWidth();
            const pdfHeight = pdf.internal.pageSize.getHeight();
            
            const canvasProps = pdf.getImageProperties(imgData);
            const canvasRatio = canvasProps.height / canvasProps.width;
            
            let imgWidth = pdfWidth - 20;
            let imgHeight = imgWidth * canvasRatio;
            
            if (imgHeight > pdfHeight - 20) {
                imgHeight = pdfHeight - 20;
                imgWidth = imgHeight / canvasRatio;
            }
            
            pdf.addImage(imgData, 'PNG', 10, 10, imgWidth, imgHeight);

            const logoImg = new Image();
            logoImg.src = LOGO_BASE64;
            logoImg.onload = () => {
                const logoProps = pdf.getImageProperties(logoImg);
                const logoWidth = 40;
                const logoHeight = (logoProps.height * logoWidth) / logoProps.width;
                pdf.addImage(logoImg, 'PNG', 15, 15, logoWidth, logoHeight);
                pdf.save(`protocolo-${clientInfo.name || 'cliente'}-${clientInfo.date}.pdf`);
            };
            logoImg.onerror = () => {
                 pdf.save(`protocolo-${clientInfo.name || 'cliente'}-${clientInfo.date}.pdf`);
            }


        } catch (error) {
            console.error("Error exporting PDF:", error);
        } finally {
            if (logoElement) {
                logoElement.style.visibility = 'visible';
            }
            setIsExporting(false);
        }
    };


    return (
        <div className="bg-slate-50 font-sans text-slate-800 min-h-screen">
            <div className="container mx-auto p-4 md:p-8">
                
                <header className="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8">
                    <div className="flex items-center space-x-4 mb-4 sm:mb-0">
                        <img src={LOGO_BASE64} alt="Cabo Health Logo" className="h-12" />
                        <div>
                            <h1 className="text-2xl md:text-3xl font-bold text-slate-900">{t('title')}</h1>
                            <p className="text-slate-500">{t('subtitle')}</p>
                        </div>
                    </div>
                    <button 
                        onClick={() => setLanguage(lang => lang === 'es' ? 'en' : 'es')}
                        className="flex items-center space-x-2 px-4 py-2 bg-white border border-slate-300 rounded-md shadow-sm text-sm font-medium hover:bg-slate-100 transition-colors"
                    >
                        <Languages className="w-5 h-5 text-slate-600"/>
                        <span>{language === 'es' ? 'English' : 'Español'}</span>
                    </button>
                </header>

                <main className="space-y-10">
                    <div className="bg-white p-6 rounded-lg shadow-sm border border-slate-200">
                        <h2 className="text-lg font-semibold mb-4">{t('clientInfo')}</h2>
                        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                            <InputField label={t('clientName')} name="name" value={clientInfo.name} onChange={handleClientInfoChange} />
                            <InputField label={t('protocolDate')} name="date" type="date" value={clientInfo.date} onChange={handleClientInfoChange} />
                            <InputField label={t('clientEmail')} name="email" type="email" value={clientInfo.email} onChange={handleClientInfoChange} placeholder={`${t('example')} client@email.com`}/>
                            <InputField label={t('clientWeight')} name="weight" type="number" value={clientInfo.weight} onChange={handleClientInfoChange} placeholder={`${t('example')} 75`}/>
                        </div>
                    </div>

                    <div className="space-y-4">
                         {!isAdding && protocolItems.length < 5 && (
                            <div className="flex flex-wrap gap-4 items-center p-4 bg-slate-100 rounded-lg border border-slate-200">
                                <PeptideSelector onAdd={handleStartAdding} t={t} />
                                 <button 
                                    onClick={() => handleStartAdding(null)}
                                    className="flex items-center justify-center gap-2 px-4 py-2 text-sm font-semibold bg-slate-800 text-white rounded-md hover:bg-slate-700 transition-colors shadow-sm"
                                >
                                    <PlusCircle className="w-5 h-5"/> {t('addManual')}
                                </button>
                                <button
                                    onClick={handleAddNote}
                                    className="flex items-center justify-center gap-2 px-4 py-2 text-sm font-semibold bg-slate-600 text-white rounded-md hover:bg-slate-500 transition-colors shadow-sm"
                                >
                                    <FileText className="w-5 h-5"/> {t('addNote')}
                                </button>
                            </div>
                        )}
                        
                        {isAdding && newItem && (
                            <NewItemForm
                                item={newItem}
                                t={t}
                                tPurpose={tPurpose}
                                onUpdate={handleUpdateNewItem}
                                onSave={handleCommitNewItem}
                                onCancel={handleCancelAdding}
                                uniquePurposes={uniquePurposes}
                                uniqueTimings={uniqueTimings}
                                uniqueFrequencies={uniqueFrequencies}
                                uniqueDurations={uniqueDurations}
                            />
                        )}
                    </div>
                </main>
                
                {protocolItems.length > 0 && (
                     <div className="mt-12">
                        <div className="flex justify-between items-center mb-4">
                             <h2 className="text-xl font-bold text-slate-900">{t('createProtocol')}</h2>
                            <button
                                onClick={handleExportPdf}
                                disabled={isExporting || !scriptsLoaded}
                                className="flex items-center justify-center gap-2 w-40 px-4 py-2 font-semibold bg-cyan-600 text-white rounded-md hover:bg-cyan-700 transition-colors shadow-sm disabled:bg-cyan-400 disabled:cursor-not-allowed"
                                title={!scriptsLoaded ? "Loading PDF libraries..." : "Export to PDF"}
                            >
                                {isExporting ? <div className="animate-spin rounded-full h-5 w-5 border-b-2 border-white"></div> : <Download className="w-5 h-5"/>}
                                {isExporting ? t('exporting') : t('exportPdf')}
                            </button>
                        </div>
                        <div className="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
                            <ProtocolTable 
                                protocolItems={protocolItems} 
                                t={t} 
                                tPurpose={tPurpose} 
                                onRemove={removeProtocolItem}
                                onUpdate={updateProtocolItemInList}
                            />
                        </div>
                     </div>
                )}


                <footer className="mt-12 text-center text-xs text-slate-500 p-4 border-t border-slate-200">
                    <p>{t('disclaimer')}</p>
                </footer>
                
                <div className="absolute -z-10 -left-[9999px] top-0 opacity-0">
                    <div ref={pdfPrintRef} className="p-10 bg-white" style={{width: '297mm'}}>
                        <PDFPreviewLayout language={language} protocolItems={protocolItems} clientInfo={clientInfo} t={t} tPurpose={tPurpose} />
                    </div>
                </div>

            </div>
        </div>
    );
}

// --- Sub-components ---

const InputField = ({ label, ...props }) => (
    <div>
        <label className="block text-sm font-medium text-slate-600 mb-1">{label}</label>
        <input 
            {...props}
            className="w-full px-3 py-2 bg-white border border-slate-300 rounded-md shadow-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 sm:text-sm"
        />
    </div>
);

const PeptideSelector = ({ onAdd, t }) => {
    const [selectedValue, setSelectedValue] = useState('');
    
    const handleAdd = () => {
        if (selectedValue) {
            onAdd(selectedValue);
            setSelectedValue('');
        }
    };
    
    return (
        <div className="flex items-center gap-2">
            <select
                value={selectedValue}
                onChange={(e) => setSelectedValue(e.target.value)}
                className="block w-48 px-3 py-2 bg-white border border-slate-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 sm:text-sm"
            >
                <option value="" disabled>{t('selectPeptide')}</option>
                {PEPTIDE_DATASET.map(p => <option key={p.id} value={p.id}>{p.name}</option>)}
            </select>
            <button 
                onClick={handleAdd}
                disabled={!selectedValue}
                className="flex items-center justify-center gap-2 px-4 py-2 font-semibold bg-cyan-600 text-white rounded-md hover:bg-cyan-700 transition-colors shadow-sm disabled:bg-cyan-400 disabled:cursor-not-allowed"
            >
               <PlusCircle className="w-5 h-5"/> {t('addPeptide')}
            </button>
        </div>
    );
};

const NewItemForm = ({ item, t, tPurpose, onUpdate, onSave, onCancel, uniquePurposes, uniqueTimings, uniqueFrequencies, uniqueDurations }) => {

    const calculated = useMemo(() => {
        return computeUnits(item.amountInVialMg, item.chosenBacWaterMl, item.chosenDose, item.chosenDoseUnit);
    }, [item.amountInVialMg, item.chosenBacWaterMl, item.chosenDose, item.chosenDoseUnit]);

    const handleDoseChange = (e, index) => {
        const value = e.target.value === '' ? '' : parseFloat(e.target.value);
        if (value === '' || (!isNaN(value) && value >= 0)) {
            onUpdate('chosenDose', value === '' ? 0 : value, index);
        }
    };

    const handleVialMgChange = (e, index) => {
        const value = e.target.value === '' ? '' : parseFloat(e.target.value);
        if (value === '' || (!isNaN(value) && value >= 0)) {
            onUpdate('amountInVialMg', value === '' ? 0 : value, index);
        }
    };

    const addBlendComponent = () => {
       const newVialMg = [...item.amountInVialMg, 0];
       onUpdate('amountInVialMg', newVialMg);
    };


    return (
        <div className="bg-white p-4 rounded-lg shadow-lg border border-slate-200 relative animate-fade-in">
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-6 gap-y-4">
                <div className="space-y-3">
                    <h3 className="font-bold text-lg text-slate-800">{item.isManual ? t('manualPeptideName') : item.name}</h3>
                    {item.isManual ? (
                        <InputField label={t('name')} value={item.name} onChange={e => onUpdate('name', e.target.value)} />
                    ) : (
                        <p className="text-sm text-slate-500">{tPurpose(item.purpose)}</p>
                    )}
                    {item.isManual && (
                         <>
                            <InputField 
                                label={t('purpose')} 
                                value={item.purpose} 
                                onChange={e => onUpdate('purpose', e.target.value)} 
                                list="purposes-list"
                            />
                            <datalist id="purposes-list">
                                {uniquePurposes.map(opt => <option key={opt} value={tPurpose(opt)} />)}
                            </datalist>
                        </>
                    )}
                </div>

                <div className="space-y-3">
                    <div>
                        <label className="block text-sm font-medium text-slate-600 mb-1">{t('vialAmount')}</label>
                        {item.amountInVialMg.map((mg, i) => (
                             <input key={i} type="number" value={mg} min="0" step="0.1"
                                onChange={e => handleVialMgChange(e, i)}
                                className="w-full px-3 py-2 mb-2 bg-white border border-slate-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-cyan-500 sm:text-sm"
                            />
                        ))}
                         {item.isManual && item.amountInVialMg.length < 2 && (
                            <button onClick={addBlendComponent} className="text-xs text-cyan-600 hover:text-cyan-800">+ Add component for blend</button>
                        )}
                    </div>
                     <InputField label={t('bacWater')} type="number" value={item.chosenBacWaterMl} min="0.1" step="0.1"
                        onChange={e => onUpdate('chosenBacWaterMl', parseFloat(e.target.value) || 0)}
                    />
                </div>

                 <div className="space-y-3">
                    <div>
                        <label className="block text-sm font-medium text-slate-600 mb-1">{t('dose')}</label>
                        {item.chosenDose.map((dose, i) => (
                           <div key={i} className="flex items-center gap-2 mb-2">
                                <input type="number" value={dose} min="0" onChange={e => handleDoseChange(e, i)}
                                    className="w-full px-3 py-2 bg-white border border-slate-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-cyan-500 sm:text-sm"
                                />
                            </div>
                        ))}
                    </div>
                     <select 
                        value={item.chosenDoseUnit}
                        onChange={e => onUpdate('chosenDoseUnit', e.target.value)}
                        className="w-full px-3 py-2 bg-white border border-slate-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-cyan-500 sm:text-sm"
                    >
                        <option value="mcg">mcg</option>
                        <option value="mg">mg</option>
                    </select>
                    <div className="p-2 bg-cyan-50 border-l-4 border-cyan-500 text-cyan-800 rounded">
                        <p className="font-semibold text-sm">{t('units')}: <span className="text-base font-bold">{calculated.units.join(' / ')} U</span></p>
                        <p className="text-xs">({calculated.volumeMl.join(' / ')} mL)</p>
                    </div>
                </div>

                <div className="space-y-3">
                    <InputField 
                        label={t('timing')} 
                        value={item.timing} 
                        onChange={e => onUpdate('timing', e.target.value)} 
                        list="timings-list"
                    />
                    <datalist id="timings-list">
                        {uniqueTimings.map(opt => <option key={opt} value={opt} />)}
                    </datalist>

                    <InputField 
                        label={t('frequency')} 
                        value={item.frequency} 
                        onChange={e => onUpdate('frequency', e.target.value)} 
                        list="frequencies-list"
                    />
                    <datalist id="frequencies-list">
                        {uniqueFrequencies.map(opt => <option key={opt} value={opt} />)}
                    </datalist>

                    <InputField 
                        label={t('duration')} 
                        value={item.duration} 
                        onChange={e => onUpdate('duration', e.target.value)} 
                        list="durations-list"
                    />
                    <datalist id="durations-list">
                        {uniqueDurations.map(opt => <option key={opt} value={opt} />)}
                    </datalist>
                </div>
            </div>
            <div className="flex justify-end gap-3 mt-4 pt-4 border-t border-slate-200">
                <button onClick={onCancel} className="px-4 py-2 text-sm font-semibold bg-slate-200 text-slate-700 rounded-md hover:bg-slate-300 transition-colors">{t('cancel')}</button>
                <button onClick={onSave} className="px-4 py-2 text-sm font-semibold bg-cyan-600 text-white rounded-md hover:bg-cyan-700 transition-colors shadow-sm">{t('addToProtocol')}</button>
            </div>
        </div>
    );
};


const ProtocolTable = ({ protocolItems, t, tPurpose, onRemove, onUpdate, isPdf = false }) => {
    return (
        <div className="overflow-x-auto">
            <table className="w-full text-sm text-left text-slate-600">
                <thead className="text-xs text-slate-700 uppercase bg-slate-100">
                    <tr>
                        <th scope="col" className="px-4 py-3">{t('name')}</th>
                        <th scope="col" className="px-4 py-3">{t('purpose')}</th>
                        <th scope="col" className="px-4 py-3 text-center">{t('vialAmount')}</th>
                        <th scope="col" className="px-4 py-3 text-center">{t('bacWater')}</th>
                        <th scope="col" className="px-4 py-3 text-center">{t('dose')}</th>
                        <th scope="col" className="px-4 py-3 text-center">{t('units')}</th>
                        <th scope="col" className="px-4 py-3">{t('timing')}</th>
                        <th scope="col" className="px-4 py-3">{t('frequency')}</th>
                        <th scope="col" className="px-4 py-3">{t('duration')}</th>
                        <th scope="col" className="px-4 py-3 text-center">{t('actions')}</th>
                    </tr>
                </thead>
                <tbody>
                    {protocolItems.map((item) => {
                        if (item.type === 'note') {
                            return <NoteRow key={item.uniqueId} item={item} onRemove={onRemove} onUpdate={onUpdate} t={t} isPdf={isPdf} />;
                        }
                        return <PeptideRow key={item.uniqueId} item={item} onRemove={onRemove} t={t} tPurpose={tPurpose} />;
                    })}
                </tbody>
            </table>
        </div>
    );
}

const PeptideRow = ({ item, onRemove, t, tPurpose }) => {
    const calculated = computeUnits(item.amountInVialMg, item.chosenBacWaterMl, item.chosenDose, item.chosenDoseUnit);
    return (
        <tr className="bg-white border-b hover:bg-slate-50">
            <td className="px-4 py-4 font-semibold text-slate-900">{item.name}</td>
            <td className="px-4 py-4">{tPurpose(item.purpose)}</td>
            <td className="px-4 py-4 text-center">{item.amountInVialMg.join(' / ')} mg</td>
            <td className="px-4 py-4 text-center">{item.chosenBacWaterMl} mL</td>
            <td className="px-4 py-4 text-center">{item.chosenDose.join(' / ')} {item.chosenDoseUnit}</td>
            <td className="px-4 py-4 text-center font-bold text-cyan-700">{calculated.units.join(' / ')} U</td>
            <td className="px-4 py-4">{item.timing}</td>
            <td className="px-4 py-4">{item.frequency}</td>
            <td className="px-4 py-4">{item.duration}</td>
            <td className="px-4 py-4 text-center">
                <button
                    onClick={() => onRemove(item.uniqueId)}
                    className="p-1 text-slate-400 hover:text-red-600 rounded-full hover:bg-red-100 transition-colors"
                    title={t('remove')}
                >
                    <X className="w-5 h-5" />
                </button>
            </td>
        </tr>
    );
};

const NoteRow = ({ item, onRemove, onUpdate, t, isPdf }) => (
    <tr className="bg-slate-50 border-b">
        <td colSpan="9" className="px-4 py-2">
            {isPdf ? (
                 <p className="p-2 text-sm text-slate-700 whitespace-pre-wrap">{item.content || t('notePlaceholder')}</p>
            ) : (
                <textarea
                    value={item.content}
                    onChange={(e) => onUpdate(item.uniqueId, e.target.value)}
                    placeholder={t('notePlaceholder')}
                    className="w-full p-2 text-sm bg-slate-50 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-cyan-500"
                    rows="2"
                />
            )}
        </td>
        <td className="px-4 py-4 text-center align-top">
            <button
                onClick={() => onRemove(item.uniqueId)}
                className="p-1 text-slate-400 hover:text-red-600 rounded-full hover:bg-red-100 transition-colors"
                title={t('remove')}
            >
                <X className="w-5 h-5" />
            </button>
        </td>
    </tr>
);


const PDFPreviewLayout = ({ language, protocolItems, clientInfo, t, tPurpose }) => {
    return (
        <div className="bg-white p-8 font-sans text-black">
            <header className="flex justify-between items-start pb-4 border-b-2 border-slate-800 mb-6">
                <div>
                    <img id="pdf-logo" src={LOGO_BASE64} alt="Cabo Health Logo" className="h-16 mb-4" />
                    <h1 className="text-3xl font-bold text-slate-900">
                        {language === 'es' ? 'Protocolo de Péptidos' : 'Peptide Protocol'}
                    </h1>
                </div>
                <div className="text-right text-sm">
                    {clientInfo.name && <p><span className="font-semibold">{t('clientName')}:</span> {clientInfo.name}</p>}
                    {clientInfo.date && <p><span className="font-semibold">{t('protocolDate')}:</span> {clientInfo.date}</p>}
                    {clientInfo.weight && <p><span className="font-semibold">{t('clientWeight')}:</span> {clientInfo.weight} kg</p>}
                    {clientInfo.email && <p><span className="font-semibold">{t('clientEmail')}:</span> {clientInfo.email}</p>}
                </div>
            </header>

            <main>
                <ProtocolTable protocolItems={protocolItems} t={t} tPurpose={tPurpose} isPdf={true} />
            </main>

            <footer className="mt-8 pt-4 border-t border-slate-400 text-center text-xs text-slate-600">
                 <p>{t('disclaimer')}</p>
            </footer>
        </div>
    );
};

